#:kivy 2.1.0
#:import math math
<NotepadTab>
    FloatLayout:
        canvas:
            Color:
                rgba: 0.8706, 0.8706, 0.8078, 1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            width: self.minimum_width
            cols: max(1, math.floor((self.width - 15) / 195))
            row_force_default: True
            col_force_default: True
            row_default_height: 170
            col_default_width: 170

            padding: 30, 25
            spacing: 20
            Button:
                background_color: "#E4E181"
                background_normal:""
                text:"I'm an notepad tab"
                color: "#000000"
                text: str(self.parent.minimum_width)
            Button:
                background_color: "#E4E181"
                background_normal:""
                text:"I'm an notepad tab"
                color: "#000000"
            Button:
                background_color: "#E4E181"
                background_normal:""
                text:"I'm an notepad tab"
                color: "#000000"
            Button:
                background_color: "#E4E181"
                background_normal:""
                text:"I'm an notepad tab"
                color: "#000000"
